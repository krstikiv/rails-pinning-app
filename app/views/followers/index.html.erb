<h1>Listing Followers</h1>

<div class="panel">
  <div class="panel-body">
    <table class="table table-striped table-bordered">
      <thead>
      <tr>
        <th>User</th>
        <th>Follower</th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @followers.each do |follower| %>
        <tr>
        <td><%= follower.user.first_name + ' ' + follower.user.last_name  %></td>
        <td><%= follower.follower_id %></td>
        <td><%= link_to 'Destroy', follower, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<%= link_to 'New Follower', new_follower_path %>
