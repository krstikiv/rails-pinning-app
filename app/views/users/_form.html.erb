<div class="panel panel-default">
  <div class="panel-heading">Create a new account:</div>
  <div class="panel-body">
    <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <div class="form-group">
      <%= f.label :first_name, class: "control-label" %><br>
      <div class="group-control">
      <%= f.text_field :first_name, placeholder: 'John', class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :last_name, class: "control-label" %><br>
      <div class="group-control">
      <%= f.text_field :last_name, placeholder: 'Smith', class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, class: "control-label" %><br>
      <div class="group-control">
      <%= f.text_field :email, placeholder: 'example@email.com', class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, class: "control-label" %><br>
      <div class="group-control">
      <%= f.text_field :password, placeholder: 'Create a password', class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
        <div class="group-control">
          <%= button_tag "Create", data: { disable_with: 'Please wait...' }, class: 'btn btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>